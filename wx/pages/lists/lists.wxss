/* pages/index/foods.wxss */
.page{
  height:auto;
}
.page__bd{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.weui-search-bar{background: #F9F022;border: none;color:#000;}
.weui-search-bar__cancel-btn{color:#000;font-size: 12px;}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.foods{display: flex;justify-content: space-between;margin-top: 65px;flex-wrap: wrap;}
.food-list{width: 45%;height: 240px;line-height: 40px;font-size: 14px;margin-bottom: 20px;}
.food-list view{width: 100%;height: 200px;border-radius: 5px;}
.food-list image{
  width: 24px;
  margin: 8px 10px 0 0;
  float: right;
}

.no-foods{width: 100%;margin-top: 65px;}
.hot-head{font-size: 16px;line-height: 40px;width: 100%;}
.hot-ul{width: 100%;overflow: hidden;}
.hot-list{
  float: left;padding: 5px 10px;background: #efefef;font-size: 12px;margin-right: 7px;
  margin-bottom: 10px;border-radius: 5px;
}

