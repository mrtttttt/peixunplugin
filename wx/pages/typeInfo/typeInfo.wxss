/* pages/typeInfo/typeInfo.wxss */
.main {
  width:100%;
  height: 100%;
  padding: 15px 13px;
  box-sizing: border-box;
} 
.box{
  width: 100%;
  line-height: 35px;
  margin-bottom: 10px;
  overflow: hidden;
}
.box text{
  float: left;
  width: 20%;
}
.box input{
  padding-left: 10px;
  box-sizing: border-box;
  width: 70%;
  height: 35px;
  float: left;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}
.box image{
  width: 100px;
  height:100px;
  float: left;
}
button{
  width: 100%;
  line-height: 50px;
  clear: both;
  margin-top: 20px
}
