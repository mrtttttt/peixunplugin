/* pages/usInfo/usInfo.wxss */
.main {
  width:100%;
  height: 100%;
  padding: 15px 13px;
  box-sizing: border-box;
} 
.box{
  width: 100%;
  line-height: 35px;
  margin-bottom: 10px;
  overflow: hidden;
}
.box text{
  float: left;
  width: 30%;
}
.box input,.box textarea{
  padding: 0 10px;
  box-sizing: border-box;
  width: 65%;
  height: 35px;
  float: left;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}
.box>view{
  width: 65%;
  float: left;
}
.box>view>view{
 overflow: hidden;
}
.phoneBox{
  margin-bottom: 10px;
}

.box textarea{
  min-height: 80px;
}
.box .span{
  width: 35%;
  float: left;
}
.box .phone{
  width: 60%;
  float:left;
  margin-left: 5%;
}
.box image{
  width: 47%;
  height: 90px;
  margin-bottom: 10px;
  float: left;
  border-radius: 4px;
}
.box image:nth-of-type(2n){
  margin-left: 6%;
}
button{
  width: 100%;
  line-height: 50px;
  clear: both;
  margin-top: 20px
}
